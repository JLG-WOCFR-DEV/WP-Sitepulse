{
    "name": "sitepulse/sitepulse",
    "description": "Development tooling for WP Sitepulse",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.9",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "lint:php": "@php vendor/bin/phpcs",
        "lint:php:report": "@php vendor/bin/phpcs --report=full",
        "analyse:php": "@php vendor/bin/phpstan analyse",
        "test:phpunit": "@php vendor/bin/phpunit -c phpunit.xml.dist"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
